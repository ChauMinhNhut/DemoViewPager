<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button android:id="@+id/pager1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="loadViewPagerWithTabNavigation"
        android:text="@string/pager_1"
        android:layout_weight="1"/>
    
     <Button android:id="@+id/pager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="loadViewPagerWithPagerTabStrip"
         android:text="@string/pager_2"
         
        android:layout_weight="1"/>
     
      <Button android:id="@+id/pager3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:onClick="loadViewPagerWithPagerSlidingTabStrip"
         android:text="@string/pager_3"
        android:layout_weight="1"/>

</LinearLayout>
